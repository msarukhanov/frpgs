create table if not exists users
(
	id serial not null,
	username varchar,
	password varchar,
	name varchar,
	created_at timestamp with time zone,
	token varchar,
	status varchar,
	constraint users_pk
		primary key (id)
);

alter table users owner to neondb_owner;

create unique index if not exists users_id_uindex
	on users (id);

create table religions
(
    id          serial not null
        constraint religions_pk
            primary key,
    slug        varchar,
    name        varchar,
    image       varchar,
    character   varchar,
    description text,
    created_at  timestamp with time zone
);

alter table religions
    owner to neondb_owner;

create unique index religions_id_uindex
    on religions (id);

create table races
(
    id          serial not null
        constraint races_pk
            primary key,
    slug        varchar,
    name        varchar,
    image       varchar,
    description text,
    created_at  timestamp with time zone
);

alter table races
    owner to neondb_owner;

create unique index races_id_uindex
    on races (id);

