create table artifacts
(
    id          serial not null
        constraint artifacts_pk
            primary key,
    slug        varchar,
    name        varchar,
    image       varchar,
    type   varchar,
    rank   varchar,
    description text,
    created_at  timestamp with time zone
);

alter table artifacts
    owner to neondb_owner;

create unique index artifacts_id_uindex
    on artifacts (id);

create table dungeons
(
    id          serial not null
        constraint dungeons_pk
            primary key,
    slug        varchar,
    name        varchar,
    image       varchar,
    level       int,
    type        varchar,
    region      varchar,
    description text,
    enemies     json,
    created_at  timestamp with time zone
);

alter table dungeons
    owner to neondb_owner;

create unique index dungeons_id_uindex
    on dungeons (id);

create table classes
(
    id          serial not null
        constraint classes_pk
            primary key,
    slug        varchar,
    parent      varchar,
    name        varchar,
    image       varchar,
    level       varchar,
    type        json,
    range       varchar,
    description text,
    roleplay    text,
    attributes  json,
    casts       json,
    created_at  timestamp with time zone
);

alter table classes
    owner to neondb_owner;

create unique index classes_id_uindex
    on classes (id);

create table nations
(
    id          serial not null
        constraint nations_pk
            primary key,
    slug        varchar,
    race        varchar,
    name        varchar,
    image       varchar,
    description text,
    stats       json,
    created_at  timestamp with time zone
);

