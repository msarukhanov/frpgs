    owner to neondb_owner;

create unique index nations_id_uindex
    on nations (id);

create table campaigns
(
    id          serial not null
        constraint campaigns_pk
            primary key,
    slug        varchar,
    name        varchar,
    type        varchar,
    duration    varchar,
    image       varchar,
    level       int,
    leader      varchar,
    region      varchar,
    description text,
    created_at  timestamp with time zone
);

alter table campaigns
    owner to neondb_owner;

create unique index campaigns_id_uindex
    on campaigns (id);

create table if not exists characters
(
	id serial not null,
	name varchar,
    slug varchar,
	titles json,
    race varchar,
    gender varchar,
    nation varchar,
    image varchar,
    religion json,
    faction json,
    campaign json,
    _class varchar,
    level varchar,
    bio text,
    age varchar,
    character text,
    appearance json,
    stats json,
    other json,
    connections json,
	created_at timestamp with time zone,
	constraint characters_pk
		primary key (id)
);

alter table characters owner to neondb_owner;

create unique index if not exists characters_id_uindex
	on characters (id);

